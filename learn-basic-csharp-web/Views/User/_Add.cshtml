@model learn_basic_csharp_web.Models.UserVM.Add
@{
}

@using (Html.BeginForm("Save", "User", FormMethod.Post, new { id = "add-form" }))
{
    <div class="form-group">
        @Html.TextBoxFor(x => x.User.Username, new { @class = "form-control", @placeholder = "Username" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(x => x.User.Email, new { @class = "form-control", @placeholder = "Email" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(x => x.User.Password, new { @class = "form-control", @placeholder = "Password",  @type = "password"})
    </div>
    <div class="mb-3">
        @Html.DropDownListFor(x => x.User.RoleId, new SelectList(Model.Roles, "Id", "Name"), "Select Role", new { @class = "form-select", @required = "required" })
    </div>
    <div class="form-check form-switch my-3">
        @Html.CheckBoxFor(x => x.User.IsActive, new { @class = "form-check-input", @type = "checkbox", @checked = true })
        <label class="form-check-label" for="flexSwitchCheckChecked">Is Active</label>
    </div>
    <button type="button" class="btn btn-sm btn-primary" onclick="fnSave(`add`)">Save</button>
}
