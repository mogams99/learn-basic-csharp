@model learn_basic_csharp_web.Models.AuthVM.Login

@{
    ViewData["Title"] = "Login Page";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Login Form</h2>
                    @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                    {
                        <form action="#">
                            <div class="mb-3">
                                @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @required = true, @placeholder = "Username" })
                                @* <input type="text" class="form-control" placeholder="Username" required> *@
                            </div>
                            <div class="mb-3">
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @required = true, @placeholder = "Password", @type = "password"})
                                @* <input type="password" class="form-control" placeholder="Password" required> *@
                            </div>
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-block">Login</button>
                            </div>
                        </form>
                        <div class="text-center">
                            <a class="nav-link" href="@(Url.Action("Register"))">Register</a>
                        </div>
                        
                    }
                </div>
            </div>
        </div>
    </div>
</div>
